<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<%= form_for @user, url: users_update_path, method: :patch do |f| %>

  <h2>Edit role for <%= @user.email %></h2>

  <label>
  <div><%= f.label :role %>
  <%= f.select :role_id, Role.all.collect{ |c|[c.ename, c.id]} %>
  </div>

  <div><%= f.submit "Update" %></div>
<% end %>

<%= link_to "Back", users_index_path %>


